{
  "name": "schema-recipes",
  "version": "1.0.0",
  "description": "This library provides functions to retrieve recipe data from any website URL. The website data must be in schema.org format https://schema.org/.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Creet-Studios/schema-recipes.git"
  },
  "author": "j0bIT",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Creet-Studios/schema-recipes/issues"
  },
  "homepage": "https://github.com/Creet-Studios/schema-recipes#readme",
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "axios": "^0.27.2",
    "schema-dts": "^1.1.0",
    "tinyduration": "^3.2.2"
  },
  "directories": {
    "lib": "lib"
  },
  "keywords": [
    "recipes",
    "schema",
    "schema.org",
    "fetch",
    "convert",
    "extract"
  ]
}
